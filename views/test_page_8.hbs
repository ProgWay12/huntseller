<div class="test_header">
    <h3>{{ask_main_text}} <br> {{ask_info.ask_text}}</h3>
</div>
<div class="answers_block">
    <div class="answer_each" onclick="check_radio(this)">
        <input type="radio" name="answer" id="" class="real-radio-btn" value="true">
        <div class="span_wrapper">
            <span class="custom-radio-btn"></span>
        </div>
        <p>Совершенно верно</p>
    </div>
    <div class="answer_each" onclick="check_radio(this)">
        <input type="radio" name="answer" id="" class="real-radio-btn" value="usually_true">
        <div class="span_wrapper">
            <span class="custom-radio-btn"></span>
        </div>
        <p>Отчасти верно</p>
    </div>
    <div class="answer_each" onclick="check_radio(this)">
        <input type="radio" name="answer" id="" class="real-radio-btn" value="usually_false">
        <div class="span_wrapper">
            <span class="custom-radio-btn"></span>
        </div>
        <p>Отчасти неверно</p>
    </div>
    <div class="answer_each" onclick="check_radio(this)">
        <input type="radio" name="answer" id="" class="real-radio-btn" value="false">
        <div class="span_wrapper">
            <span class="custom-radio-btn"></span>
        </div>
        <p>Совершенно неверно</p>
    </div>
</div>
<a onclick="accept_ask({{ask_info.ask_id}}, {{ask_info.block_id}})">Далее</a>